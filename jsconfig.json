{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "paths": {
      "~/*": ["src/*"],
    },
  },
  "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.js", "src/**/*.svelte"]
}
